# Python 3.11 Alpine imajÄ± (hafif ve hÄ±zlÄ±)
FROM python:3.11-alpine

# Maintainer bilgisi
LABEL maintainer="SaaS 2026 Team"
LABEL description="SaaS 2026 - Multi-Tenant Otel/Tur YÃ¶netim Sistemi (Supervisord ile TÃ¼m Servisler)"

# Environment deÄŸiÅŸkenleri
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Ã‡alÄ±ÅŸma dizini
WORKDIR /app

# Sistem baÄŸÄ±mlÄ±lÄ±klarÄ± (PostgreSQL, Pillow, Supervisord iÃ§in)
RUN apk add --no-cache \
    postgresql-dev \
    gcc \
    python3-dev \
    musl-dev \
    jpeg-dev \
    zlib-dev \
    libjpeg \
    libpq \
    bash \
    curl \
    supervisor \
    && rm -rf /var/cache/apk/*

# Ã–nce requirements.txt'i kopyala (cache iÃ§in)
COPY requirements.txt .

# Python baÄŸÄ±mlÄ±lÄ±klarÄ±nÄ± kur (supervisord dahil)
RUN pip install --upgrade pip && \
    pip install -r requirements.txt && \
    pip install supervisor

# TÃ¼m proje dosyalarÄ±nÄ± kopyala
COPY . .

# Supervisord config dosyasÄ±nÄ± kopyala
COPY supervisord.conf /etc/supervisor/conf.d/supervisord.conf

# Static, media ve logs klasÃ¶rleri oluÅŸtur
RUN mkdir -p /app/staticfiles /app/media /app/logs && \
    chmod -R 755 /app/logs

# Entrypoint script oluÅŸtur
RUN echo '#!/bin/bash\n\
set -e\n\
\n\
echo "ðŸš€ SaaS 2026 - Container baÅŸlatÄ±lÄ±yor..."\n\
\n\
# Database baÄŸlantÄ±sÄ±nÄ± bekle\n\
echo "â³ Database baÄŸlantÄ±sÄ± bekleniyor..."\n\
python manage.py wait_for_db --max-retries=30 --retry-delay=2\n\
\n\
# Migration iÅŸlemleri\n\
echo "ðŸ“¦ Database migration iÅŸlemleri yapÄ±lÄ±yor..."\n\
python manage.py migrate_schemas --shared --noinput || true\n\
python manage.py migrate_schemas --noinput || true\n\
\n\
# Static dosyalarÄ± topla\n\
echo "ðŸ“ Static dosyalar toplanÄ±yor..."\n\
python manage.py collectstatic --noinput || true\n\
\n\
# Supervisord'u baÅŸlat (tÃ¼m servisler: gunicorn, celery, celery-beat)\n\
echo "âœ… TÃ¼m servisler baÅŸlatÄ±lÄ±yor (Gunicorn, Celery, Celery-Beat)..."\n\
exec /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf\n\
' > /app/docker-entrypoint.sh && \
    chmod +x /app/docker-entrypoint.sh

# Port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8000/health/ || exit 1

# Entrypoint
ENTRYPOINT ["/app/docker-entrypoint.sh"]

